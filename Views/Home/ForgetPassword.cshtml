@using asp.netcoreIdentityApp.Web.ViewModels
@model ForgetPasswordViewModel

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div class="alert alert-danger" asp-validation-summary="ModelOnly" role="alert"></div>
            <div class="alert alert-info">Şifre yenileme linki e-posta adresinize gönderilecektir.
            </div>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" class=" form-control" />
                <span asp-validation-for="Email" class="form-text"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>